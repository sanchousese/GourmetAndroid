<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.GreyText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.LittleText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.LittleText.GreyText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.GreyText.BigText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.MiddleText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.MiddleText.GreyText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.MiddleText.GreyText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.LittleText.GreenText">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Text.LittleText.BlackText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleRestaurantBlock">
        <item name="android:background">@color/dark_sand</item>
    </style>

    <style name="BodyRestaurantBlock">
        <item name="android:background">@color/sand</item>
    </style>

    <style name="Button">
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Button.RedButton">
        <item name="android:background">@drawable/red_button_selector</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Button.RedButton.WithMargin">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/button_text_size_margin</item>
    </style>

    <style name="Button.GreenButton">
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/blyudo</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

</resources>
